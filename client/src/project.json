  "forms": {
    "userLogin": {
      "title": "User Login",
      "type": "form",
      "name": "userLogin",
      "path": "user/login",
      "access": [
        {
          "type": "read_all",
          "roles": ["anonymous"]
        }
      ],
      "submissionAccess": [
        {
          "type" : "create_own",
          "roles" : ["anonymous"]
        }
      ],
      "components": [
        {
          "type": "email",
          "persistent": true,
          "unique": false,
          "protected": false,
          "defaultValue": "",
          "suffix": "",
          "prefix": "",
          "placeholder": "Enter your email address",
          "key": "email",
          "lockKey": true,
          "label": "Email",
          "inputType": "email",
          "tableView": true,
          "input": true
        },
        {
          "type": "password",
          "persistent": true,
