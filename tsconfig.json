{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "preserveConstEnums": true,
    "outDir": "lib",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "rootDir": "src"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
